{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES6",
    "lib": ["ES6", "DOM"],

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "*": ["src/@types/*"]
    },
    "types": ["@types/node", "@figma/plugin-typings"],
    "resolveJsonModule": true,

    /* Interop Constraints */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
